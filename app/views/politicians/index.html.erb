<div class="page-header">
  <h1>Politicians</h1>
</div>

<table id="politicians-table" class="table table-responsive">
  <thead>
    <tr>
        <th>Name</th>
        <th>State</th>
        <th>Party</th>
        <th>Chamber</th>
        <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% @politicians.each do |p| %>
        <tr onclick="location.href='<%= politician_path(p) %>'">
          <td><%= "#{p.first_name} #{p.last_name}" %></td>
          <td><%= state_name(p.state) %></td>
          <td><%= p.party %></td>
          <td><%= p.chamber.capitalize %></td>
          <td><%= p.points %></td>
        </tr>
    <% end %>
  </tbody>
</table>