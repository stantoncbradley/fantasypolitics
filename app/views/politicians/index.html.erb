<div class="page-header">
  <h1><span class="glyphicon glyphicon-user"></span> Politicians</h1>
</div>

<% if !flash.empty? %>
    <div id="flash">
      <% flash.keys.each do |k| %>
          <div class="alert alert-warning">
            <%= flash[k] %>
          </div>
      <% end %>
    </div>
<% end %>

<table class="table table-responsive table-hoverable">
  <thead>
    <tr>
        <th>Name</th>
        <th>State</th>
        <th>Party</th>
        <th>Chamber</th>
        <th>Points</th>
    </tr>
  </thead>
  <tbody>
    <% @politicians.each do |p| %>
        <tr onclick="location.href='<%= politician_path(p) %>'">
          <td><%= "#{p.first_name} #{p.last_name}" %></td>
          <td><%= state_name(p.state) %></td>
          <td><%= p.party %></td>
          <td><%= p.chamber.capitalize %></td>
          <td><%= p.points %></td>
        </tr>
    <% end %>
  </tbody>
</table>