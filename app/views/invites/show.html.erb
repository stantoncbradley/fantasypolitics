<div class="page-header">
  <h1>Join the league</h1>
  <ol class="breadcrumb">
    <li>Leagues</li>
    <li><%= @teams.league.name %>></li>
    <li class="active"><%= @teams.team_name %></li>
  </ol>
</div>

<% if @teams.nil? %>
    <%= link_to 'Sign in with Facebook', user_omniauth_authorize_path(:facebook) %>
<% else %>
    <%= render template: 'teams/edit' %>
<% end %>