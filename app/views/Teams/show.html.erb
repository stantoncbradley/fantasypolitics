<div class="page-header">
  <h1><%= @team.team_name %></h1>
</div>

<div>
  <h2><%= link_to 'Create Trade', new_trade_path(to_team_id: @team.id) %></h2>
</div>

<table class="table table-responsive table-hoverable">
  <thead>
  <tr>
    <th>Politician</th>
    <th>Party</th>
    <th>State</th>
    <th>Chamber</th>
    <th>Points</th>
  </tr>
  </thead>
  <tbody>
  <% @team.politicians.order('points desc').each do |p| %>
      <tr onclick="location.href='<%= politician_path(p) %>'">
        <td><%= "#{p.first_name} #{p.last_name}" %></td>
        <td><%= p.party %></td>
        <td><%= state_name(p.state) %></td>
        <td><%= p.chamber.capitalize %></td>
        <td><%= p.points %></td>
      </tr>
  <% end %>
  </tbody>
</table>