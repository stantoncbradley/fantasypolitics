<div class="page-header">
  <h1>Create a League</h1>
</div>

<%= form_for @league do |l| %>

    <div class="form-group">
        <%= l.label :name, 'Name of League:' %>
        <%= l.text_field :name, placeholder: 'League Name' %>
    </div>

    <%= l.submit 'Create', class: 'btn btn-success' %>

<% end %>