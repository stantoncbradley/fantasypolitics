<div class="page-header">
    <h1><span class="glyphicon glyphicon-home"></span> My Leagues</h1>
  <ol class="breadcrumb">
    <li class="active">My Leagues</li>
  </ol>
</div>

<% if !flash.empty? %>
    <div id="flash">
      <% flash.keys.each do |k| %>
          <div class="alert alert-warning">
            <%= flash[k] %>
          </div>
      <% end %>
    </div>
<% end %>

<table class="table table-responsive table-hoverable">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @eligible_leagues.each do |eligible_league| %>
        <% if eligible_league[:team].status == 1 %>
          <tr onclick="location.href='<%= edit_team_path(eligible_league[:team]) %>'">
            <td>(INVITE) <%= eligible_league[:league].name %></td>
          </tr>
        <% else %>
          <tr onclick="location.href='<%= league_path(eligible_league[:league]) %>'">
            <td><%= eligible_league[:league].name %></td>
          </tr>
        <% end %>
      <%  end %>
  </tbody>
</table>

<%= link_to new_league_path, class: 'btn btn-success' do %>
    <span class="glyphicon glyphicon-plus"></span> Create a league
<% end %>