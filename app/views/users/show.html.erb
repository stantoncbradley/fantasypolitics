<div class="page-header">
    <h1><span class="glyphicon glyphicon-home"></span> Home</h1>
</div>

<h3>My Leagues</h3>
<table class="table table-responsive table-hoverable">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @leagues.each do |l| %>
        <tr onclick="location.href='<%= league_path(l) %>'">
          <td><%= l.name %></td>
        </tr>
      <%  end %>
  </tbody>
</table>

<h3>My Trades</h3>
<table class="table table-responsive table-hoverable">
  <thead>
  <tr>
    <th>League</th>
    <th>Offered by</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.teams.each do |t| %>
    <% t.trades_offered.each do |to| %>
      <tr onclick="location.href='<%= trade_path(to) %>'">
        <td><%= League.find(t.league_id).name %></td>
        <td><%= Team.find(to.from_team_id).team_name %></td>
        <td><%= to.status %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<table class="table table-responsive table-hoverable">
  <thead>
  <tr>
    <th>League</th>
    <th>Offered to</th>
    <th>Status</th>
  </tr>
  </thead>
  <tbody>
  <% current_user.teams.each do |t| %>
      <% t.trades_proposed.each do |tp| %>
          <tr onclick="location.href='<%= trade_path(tp) %>'">
            <td><%= League.find(t.league_id).name %></td>
            <td><%= Team.find(tp.to_team_id).team_name %></td>
            <td><%= tp.status %></td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>


